<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnLayoutExercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/layoutExercise" />

        <Button
            android:id="@+id/btnOpenButtonExercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button Exercise" />

        <Button
            android:id="@+id/btnOpenCalculator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculator" />

        <Button
            android:id="@+id/btnOpenMidterm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Midterm" />

        <Button
            android:id="@+id/btnOpenMatch3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match 3" />

        <Button
            android:id="@+id/btnOpenPassingIntents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passing Intents" />

        <Button
            android:id="@+id/btnOpenFragments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fragments" />

        <Button
            android:id="@+id/btnOpenMenus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menus" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>